{
  "extends": ["tslint:recommended", "tslint-react", "tslint-config-prettier"],
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts"
    ]
  },
  "rules": {
    "object-literal-sort-keys": false,
    "no-console": {
      "severity": "warning"
    },
    "member-access": {
      "severity": "warning",
      "options": "no-public"
    },
    "member-ordering": {
      "severity": "warning",
      "options": {
        "order": "statics-first"
      }
    },
    "ordered-imports": false,
    "interface-name": false
  }
}
